<h1>Searching for - <%= @search %></h1>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>socialRank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= image_tag(recipe['thumb'])%></td>
      <td><%= recipe['title'] %></td>
      <td><%= recipe['socialRank'] %></td>
    </tr>
  <% end %>
</table>